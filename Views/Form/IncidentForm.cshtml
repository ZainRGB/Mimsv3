@model Mimsv2.Models.FormModel
@{
    ViewData["Title"] = "Mims Incident Form";
}

<p>Session Access Level: <strong>@Model.AccessLevel</strong></p>

@{
    var loginHospitalId = Context.Session.GetString("loginhospitalid");
}
<p>Logged-in Hospital ID: <strong>@loginHospitalId</strong></p>

<p>Model Hospital ID: <strong>@Model.hospitalid</strong></p>
<p>Model Hospital: <strong>@Model.Hospital</strong></p>

<p>loginName: @Context.Session.GetString("loginname")</p>
<p>UserName: @Context.Session.GetString("username")</p>
<p>Surname: @Context.Session.GetString("surname")</p>
<p>Title: @Context.Session.GetString("titles")</p>
<p>Email: @Context.Session.GetString("email")</p>
<p>Department: @Context.Session.GetString("department")</p>


<h3>New Incident Form</h3>
Incident Created, Captured and Reported by @Context.Session.GetString("username") @Context.Session.GetString("surname") (@Context.Session.GetString("titles"))
<br />


<form asp-action="IncidentFormInput" method="post" id="incidentForm" style="min-height:200vh;">
